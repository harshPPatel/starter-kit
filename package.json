{
  "name": "starter-kit",
  "version": "1.0.0",
  "description": "Starter Kit for Front-end website projects",
  "main": "index.js",
  "scripts": {
    "start": "parcel ./src/*.html --open",
    "build": "parcel build ./src/*.html",
    "build:deploy": "parcel build ./src/*.html --no-source-maps",
    "lint:css": "stylelint ./src/scss/**/*.scss --config .stylelintrc.json",
    "lint:js": "eslint ./src/js/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harshPPatel/starter-kit.git"
  },
  "keywords": [
    "starter-kit"
  ],
  "author": "harshPPatel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/harshPPatel/starter-kit/issues"
  },
  "homepage": "https://github.com/harshPPatel/starter-kit#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "htmlhint": "^0.11.0",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-imagemin": "^3.0.0",
    "sass": "^1.24.4",
    "stylelint": "^13.0.0"
  },
  "dependencies": {
    "reset-css": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "stylelint --fix",
      "git add"
    ],
    "*.html": [
      "htmlhint",
      "git add"
    ]
  }
}
